type person.
type food.

alice :: person.
bob :: person.
charlie :: person.
apple :: food.
banana :: food.

parent :: person -> person -> type.
likes :: person -> food -> type.

!p1 :: parent(alice, bob).
!p2 :: parent(bob, charlie).

!l1 :: likes(alice, apple).
!l2 :: likes(bob, banana).

?- parent(alice, $x).
// $x = bob.
?- likes(alice, $y).
// $y = apple.
?- parent(alice, $x) & likes($x, $y).
// $x = bob, $y = banana.
