type person.

alice :: person.
bob :: person.
carol :: person.
dave :: person.

parent :: person -> person -> type.
ancestor :: person -> person -> type.
tall :: person -> type.

!p1 :: parent(alice, bob).
!p2 :: parent(bob, carol).
!p3 :: parent(carol, dave).
!t1 :: tall(dave).

// Only the base case - no recursion
ancestor_base :: parent($x, $y) => ancestor($x, $y).

?- ancestor($x, carol) & tall($x).
