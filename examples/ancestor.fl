person :: type of atom.
parent :: person -> person -> type.
ancestor :: person -> person -> type.
john :: person.
sarah :: person.
mike :: person.
sally :: person
p1 :: parent(john, sarah).
p2 :: parent(sarah, mike).
p3 :: parent(mike, sally).
ancestor_base :: !parent($x, $y) => ancestor($x, $y).
ancestor_step :: !parent($x, $z) & !ancestor($z, $y) => ancestor($x, $y).

// entrypoint
main :: ancestor(john, $descendant).